@model Genre


<table class="table table-hover mt-2">
    <thead>
        <tr class="table-primary">
            <th scope="col">Books List</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book item in Model.Books)
        {
            <tr class="table-primary">
                <td scope="row">
                    <a asp-controller="Book" asp-action="Detail" asp-route-id="@item.Id">
                        @item.Title
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

