@model User

<form method="post" class="mt-3" asp-action="Delete">
	<div class="border p-3 mt-5 bg-dark w-75 mx-auto">
		<div class="row pb-2">
			<h2 class="text-warning">Delete User Record</h2>
			<hr />
		</div>

		<div class="mb-3 text-light w-75 ps-3">
			<h3 class="fw-bold  text-light">User Name: @Model.Name </h3>
		</div>
		<div class="mt-5 text-white ps-5">
			<div class="Container mb-3 mx-auto">
				<h5 class="fw-bold  text-light">Street: @Model.Address.Street</h5>
				<h5 class="fw-bold text-light">Post Code: @Model.Address.PostCode</h5>
				<h5 class="fw-bold text-light">City: @Model.Address.City</h5>
				<h5 class="fw-bold text-light">Country: @Model.Address.Country</h5>
			</div>
		</div>

		<div class="mb-3 mt-5 text-light ps-5">
			<h5 class="fw-bold text-light">PhoneNo: @Model.PhoneNo</h5>
		</div>
		<br />
		<button type="submit" class="btn btn-warning" style="width:100px">Delete</button>
		<a asp-controller="User" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Back to User List
		</a>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
