@model UserLoanView

<form method="post" class="mt-3">
	<div class="border p-3 mt-5 bg-dark w-75 mx-auto">
		<div class="row pb-2">
			<h1 class="text-warning">Open new Loan</h1>
			<hr />
		</div>

		<div class="mb-3 text-light w-50">
			<label asp-for="@Model.UserName"></label>
			<input asp-for="@Model.UserName" class="form-control rounded-3" placeholder="User name .. " />
		</div>

		<div class="mb-3 text-white mt-5 ps-5">
			<div class="Container mb-3 mx-auto">
				<h6 class="fw-bold  text-light">Book1:</h6>
				<input type="text" class="form-control form-control-sm mt-1 rounded-3" asp-for="@Model.Books[0]" placeholder="Enter Book Name .. " /><br />
				<h6 class="fw-bold text-light">Book2:</h6>
				<input type="text" class="form-control form-control-sm mt-1 rounded-3" asp-for="@Model.Books[1]" placeholder="Enter Book Name .. " /><br />
				<h6 class="fw-bold text-light">Book3:</h6>
				<input type="text" class="form-control form-control-sm mt-1 rounded-3" asp-for="@Model.Books[2]" placeholder="Enter Book Name .. " /><br />
				<h6 class="fw-bold text-light">Book4:</h6>
				<input type="text" class="form-control form-control-sm mt-1 rounded-3" asp-for="@Model.Books[3]" placeholder="Enter Book Name .. " /><br />
				<h6 class="fw-bold text-light">Book5:</h6>
				<input type="text" class="form-control form-control-sm mt-1 rounded-3" asp-for="@Model.Books[4]" placeholder="Enter Book Name .. " /><br />
			</div>
		</div>

		<button type="submit" class="btn btn-warning" style="width:100px">Create</button>
		<a asp-controller="Loan" asp-action="Index" class="btn btn-secondary" style="width:200px">
			Back to Loan List
		</a>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}
