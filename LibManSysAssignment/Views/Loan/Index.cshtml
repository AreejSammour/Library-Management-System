@{
    ViewData["Title"] = "Loan Page";
}

@model List<Loan>

<div class="container mt-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Loaned Records</h2>
        </div>
        <div class="col-6 text-end float">
            <a asp-controller="Loan" asp-action="Create" class="btn btn-dark">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> &nbsp; Add New Loan
            </a>
        </div>
    </div>
    <table class="table table-info mt-5 w-100">
        <thead>
            <tr>
                <th width="10%">Loan ID</th>
                <th width="15%">Borrower</th>
                <th width="20%">Loan Date(M/D/Y) </th>
                <th width="20%">Return Date(M/D/Y)</th>
                <th width="15%">Loan Details </th>
                <th width="20%">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Loan loan in Model)
            {
             <tr>
                <td width="10%">@loan.Id</td>
                <td width="15%">
                        <a class="nav-link" asp-controller="User" asp-action="Detail" asp-route-id="@loan.User.Id">
					    @loan.User.Name
                    </a>
                </td>
                <td width="20%">@loan.LoanDate</td>
                <td width="20%">@loan.ReturnDate</td>
                <td width="15%">
                    <p>
                        <a class="nav-link text-success fw-bold" asp-controller="Loan" asp-action="Detail" asp-route-id="@loan.Id">
                            View Details..
                        </a>
                    </p>
                </td>
                <td width="20%">
                    <div>
                        @loan.Status
                         <a class="nav-link text-success fw-bold" asp-controller="Loan" asp-action="ChangeStatus" asp-route-id="@loan.Id">
                            Change Status
                        </a>
                    </div>
                </td>   
             </tr>
            }
        </tbody>
    </table>
</div>
