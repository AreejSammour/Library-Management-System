@model Book
@{
    int i = 1;
}

<div class="card text-black bg-warning mb-3 mt-5 w-75">
    <div class="card-header display-6 bg-dark text-warning">@Model.Title</div>
    <div class="card-body ps-5">
        <h3 class="card-title">Book Authors :</h3>
        @foreach (Author item in Model.Authors)
        {
            <h5 class="ps-5">Author : @item.Name</h5>
        }
        <h3 class="card-title mt-5">Book can be found in Genres :</h3>
        @foreach (Genre item in Model.Genres)
        {
            <h5 class="ps-5">Genre : @item.Name</h5>
        }
        <h4 class="card-text mt-5">ISBN : @Model.ISBN</h4>
        <hr />
		<h4 class="card-text m-3">There is <span class="text-bg-danger">@Model.Quantity</span> copies of this book</h4>
        @foreach (BookCopy item in Model.Copys)
        {
            if (@item.IsAvailable)
            {
                <h6 class="ps-5">Copy @i is inhouse</h6>
            }
            else
            {
                <h6 class="ps-5">Copy @i is checkedout</h6>
            }
            i++;
        }
    
    </div>
</div>

<div class="d-flex m-3">
    <a asp-controller="Genre" asp-action="Index" 
       class="nav-link mt-3 p-2 rounded-3 bg-warning text-center" style="width:200px">
		<h6>List Of Genres</h6>
    </a>
</div>
<div class="d-flex m-3">
    <a asp-controller="Book" asp-action="Index"
       class="nav-link mt-3 p-2 rounded-3 bg-warning text-center" style="width:200px">
        <h6>List Of Books</h6>
    </a>
</div>
