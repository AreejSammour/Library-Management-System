@model Book

<form method="post">
	<div class="border p-3 mt-5 bg-dark w-75 mx-auto">
		<div class="row pb-2">
			<h2 class="text-warning">Add new Book</h2>
			<hr />
		</div>

		<div class="mb-3 text-light">
			<label asp-for="Title"></label>
			<input asp-for="Title" class="form-control" />
		</div>

		<div class="mb-3 text-light">
			<label for="Author" class="form-label">Authors:</label>
			<div class="input-group mb-3">

				<span class="input-group-text">Author: </span>
				<input class="form-control" asp-for="@Model.Authors[0].Name" placeholder="Enter name or (-)" />
				<span class="input-group-text">Author: </span>
				<input class="form-control" asp-for="@Model.Authors[1].Name" placeholder="Enter name or (-)" />
				<span class="input-group-text">Author: </span>
				<input class="form-control" asp-for="@Model.Authors[2].Name" placeholder="Enter name or (-)" />

			</div>
		</div>

		<div class="mb-3 text-light">
			<label for="Genre" class="form-label">Genres:</label>
			<div class="input-group mb-3">
				<span class="input-group-text">Genre: </span>
				<input class="form-control" asp-for="@Model.Genres[0].Name" placeholder="Enter genre or (-)" />
				<span class="input-group-text">Genre: </span>
				<input class="form-control" asp-for="@Model.Genres[1].Name" placeholder="Enter genre or (-)" />
				<span class="input-group-text">Genre: </span>
				<input class="form-control" asp-for="@Model.Genres[2].Name" placeholder="Enter genre or (-)" />
			</div>
		</div>
		
		<div class="mb-3 text-light">
			<label asp-for="ISBN"></label>
			<input asp-for="ISBN" class="form-control" />
			<span asp-validation-for="ISBN" class="text-danger"></span>
		</div>
		<div class="mb-3 text-light">
			<label asp-for="Quantity"></label>
			<input asp-for="Quantity" class="form-control" />
			<span asp-validation-for="Quantity" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-warning" style="width:100px">Create</button>
		<a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:170px">
			Back to List
		</a>
		
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}